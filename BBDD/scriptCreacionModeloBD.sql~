CREATE TABLE IF NOT EXISTS usuario (ID INT NOT NULL AUTO_INCREMENT UNIQUE PRIMARY KEY, nombre TINYTEXT);
CREATE TABLE IF NOT EXISTS post (ID INT NOT NULL AUTO_INCREMENT UNIQUE PRIMARY KEY, titulo TINYTEXT, contenido LONGTEXT, id_blog INT REFERENCES blog (ID) ON DELETE CASCADE);
CREATE TABLE IF NOT EXISTS mensaje (ID INT NOT NULL AUTO_INCREMENT UNIQUE PRIMARY KEY, contenido LONGTEXT, id_post INT REFERENCES post (ID) ON DELETE CASCADE, id_usuario INT REFERENCES usuario (ID) ON DELETE CASCADE);